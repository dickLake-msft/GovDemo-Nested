{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",

    "contentVersion": "1.0.0.0",
    "parameters": {
        "artifactsLocation": {
            "type": "string",
            "defaultValue": "https%3A%2F%2Fraw.githubusercontent.com%2FdickLake-msft%2FGovDemo-Nested%2Fmain",
            "metadata": {
                "description": "Path to the github repo or the storage account container"
            }
        },
        "_sasToken":
         {
            "type": "secureString",
            "defaultValue": ""
        },
        "rg-location": {
            "type": "string",
            "defaultValue": "usgovarizona",
            "allowedValues":["usgovvirginia","usgoviowa","usdodeast","usdodcentral","usgovtexas", "usgovarizona"],
            "metadata": {
                "description": "Location where resources will be held"
            }
        },
        "rg-name": {
            "type": "string",
            "defaultValue": "ContosoGov"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "Basic_ResourceGroups",
            "location": "[parameters('rg-location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('artifactsLocation'), '/nestedtemplates/resourceGroups.azuredeploy.json' , parameters('_sasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "rg-name": {
                        "value": "[parameters('rg-name')]"
                    },
                    "rg-location": {
                        "value": "[parameters('rg-location')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}