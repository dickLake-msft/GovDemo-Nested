{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",

    "contentVersion": "1.0.0.0",
    "parameters": {
        "artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/dickLake-msft/GovDemo-Nested/main",
            "metadata": {
                "description": "Path to the github repo or the storage account container"
            }
        },
        "_sasToken":
         {
            "type": "secureString",
            "defaultValue": ""
        },
        "rg-location": {
            "type": "string",
            "defaultValue": "usgovarizona",
            "allowedValues":["usgovvirginia","usgoviowa","usdodeast","usdodcentral","usgovtexas", "usgovarizona"],
            "metadata": {
                "description": "Location where resources will be held"
            }
        },
        "rg-name": {
            "type": "string",
            "defaultValue": "ContosoGov"
        }
    },
    "functions": [],
    "variables": {
        "nested":"/nestedtemplates/"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "Basic_ResourceGroups",
            "location": "[parameters('rg-location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('artifactsLocation'), variables('nested'), 'resourceGroups.azuredeploy.json' , parameters('_sasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "rg-name": {
                        "value": "[parameters('rg-name')]"
                    },
                    "rg-location": {
                        "value": "[parameters('rg-location')]"
                    }
                }
            }
        },
        {
            "type":"Microsoft.Resources/deployments",
            "apiVersion":"2021-04-01",
            "name":"hub_deployment",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'Basic_ResourceGroups')]"
            ],
            "resourceGroup":"[concat(parameters('rg-name'), '-Hub-RG')]",
            "properties":{
                "mode":"Incremental",
                "templateLink":{
                    "uri":"[concat(parameters('artifactsLocation'), variables('nested'), 'hub.azuredeploy.json', parameters('_sasToken') )]"
                },
                "parameters": {
                   "hubNetwork": {
                        "value": {
                            "name": "ContosoGov-vnet-hub",
                            "addressPrefix": "10.0.0.0/20"
                        }
                    },
                    "bastionHost": {
                        "value": {
                            "name": "AzureBastionHost",
                            "publicIPAddressName": "bastion-pip",
                            "subnetName": "AzureBastionSubnet",
                            "nsgName": "nsg-hub-bastion",
                            "subnetPrefix": "10.0.1.0/29"
                        }
                    },
                    "azureFirewall": {
                        "value": {
                            "name": "Hub-Firewall",
                            "publicIPAddressName": "firewall-pip",
                            "subnetName": "AzureFirewallSubnet",
                            "subnetPrefix": "10.0.3.0/26",
                            "routeName": "r-nexthop-to-fw"
                        }
                    },
                    "vpnGateway": {
                        "value": {
                            "name": "Hub-vgw-gateway",
                            "subnetName": "GatewaySubnet",
                            "subnetPrefix": "10.0.2.0/27",
                            "pipName": "vgw-gateway-pip"
                        }
                    },
                    "deployVpnGateway": {
                        "value": false
                    }
                }
            }
        }
    ],
    "outputs": {}
}