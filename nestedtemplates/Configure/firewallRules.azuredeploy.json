{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rg-name": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        },
        "windowsIpSpace": {
            "type": "string"
        },
        "linuxIpSpace": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
                {
            "type": "Microsoft.Network/firewallpolicies/ruleCollectionGroups",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('rg-name'), '-FirewallPolicy/DefaultNetworkRuleCollectionGroup')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "priority": 200,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "NetworkRule",
                                "name": "Windows-to-Linux",
                                "ipProtocols": [
                                    "Any"
                                ],
                                "sourceAddresses": [
                                    "[parameters('windowsIpSpace')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[parameters('linuxIpSpace')]"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "*"
                                ]
                            },
                            {
                                "ruleType": "NetworkRule",
                                "name": "Linux-to-Windows",
                                "ipProtocols": [
                                    "Any"
                                ],
                                "sourceAddresses": [
                                    "[parameters('linuxIpSpace')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [
                                    "[parameters('windowsIpSpace')]"
                                ],
                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "*"
                                ]
                            }
                        ],
                        "name": "Allow Intranet communication",
                        "priority": 100
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/firewallPolicies/ruleCollectionGroups",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('rg-name'), '-FirewallPolicy/DefaultApplicationRuleCollectionGroup')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "priority": 300,
                "ruleCollections": [
                    {
                        "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
                        "action": {
                            "type": "Allow"
                        },
                        "rules": [
                            {
                                "ruleType": "ApplicationRule",
                                "name": "Internet for Windows",
                                "protocols": [
                                    {
                                        "protocolType": "Http",
                                        "port": 80
                                    },
                                    {
                                        "protocolType": "Https",
                                        "port": 443
                                    }
                                ],
                                "fqdnTags": [],
                                "webCategories": [],
                                "targetFqdns": [
                                    "*"
                                ],
                                "targetUrls": [],
                                "terminateTLS": false,
                                "sourceAddresses": [
                                    "[parameters('windowsIpSpace')]"
                                ],
                                "destinationAddresses": [],
                                "sourceIpGroups": []
                            },
                            {
                                "ruleType": "ApplicationRule",
                                "name": "Internet for Linux",
                                "protocols": [
                                    {
                                        "protocolType": "Http",
                                        "port": 80
                                    },
                                    {
                                        "protocolType": "Https",
                                        "port": 443
                                    }
                                ],
                                "fqdnTags": [],
                                "webCategories": [],
                                "targetFqdns": [
                                    "*"
                                ],
                                "targetUrls": [],
                                "terminateTLS": false,
                                "sourceAddresses": [
                                    "[parameters('linuxIpSpace')]"
                                ],
                                "destinationAddresses": [],
                                "sourceIpGroups": []
                            }
                        ],
                        "name": "Internet for Linux",
                        "priority": 100
                    }
                ]
            }
        }
    ],
    "outputs": {}
}